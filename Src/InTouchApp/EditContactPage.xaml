                                <Children>
                                    <UIElementCollection>
                                        <TextBlock Name="WorkFax_TBlock" Text="Work fax" Foreground="Gray" FontSize="17" Margin="0,0,0,3" />
                                        <TextBox x:ConnectionId="23" Name="WorkFax_TBox" Margin="0,0,0,25" Row="1" />
                                    </UIElementCollection>
                                </Children>
                            </Grid>
                            <Grid x:ConnectionId="5" Name="PhoneOtherGrid">
