                                        <TextBlock Name="OtherEmail_TBlock" Text="Other email" Foreground="Gray" FontSize="17" Margin="0,0,0,3" />
                                        <TextBox x:ConnectionId="19" Name="OtherEmail_TBox" Margin="0,0,0,25" Row="1" />
